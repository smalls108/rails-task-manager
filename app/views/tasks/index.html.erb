<h2>My Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>

          <i class="fas fa-trash-alt"></i>

        <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>

